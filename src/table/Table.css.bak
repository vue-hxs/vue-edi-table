/* anything inside a td  (usually inputs) */
#table2 table tbody td > * {
  overflow: hidden;
  border: none;
  background: transparent;
  margin: 0;
  padding: 0;
  resize: unset;
  font-family: inherit;
  font-size: inherit;
  z-index: 20;
}

#table2 table tbody td > .readonly {
  pointer-events: none;
}
