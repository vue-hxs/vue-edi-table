:root {
  --row-height: 40px;
  --header-height: 30px;
  --index-width: 30px;
  --scroll-offset: 12px;
}

/* testing the thing */

/* fill whatever parent is */
#table2 {
  height: 100%;
  min-height: 400px;
  display: flex;
  flex-flow: column;
}

#table2 table {
  min-height: 400px;
  width: 100%;
  display: flex;
  position: relative;
  box-sizing: border-box;
  flex: 1;
}

#table2 table .corner {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 50;
  width: var(--index-width);
  height: var(--header-height);
}

/* we might have a table inside */
#table2 table tr {
  height: var(--row-height);
  display: flex;
  flex-flow: row;
  min-width: fit-content;
  min-width: -moz-fit-content;
}

#table2 table > tbody > tr > td {
  flex: 1;
  overflow: hidden;
  display: flex;
  align-items: flex-start;
}

#table2 table > thead,
#table2 table > tfoot {
  overflow: hidden;
  position:absolute;
  z-index: 10;
}

#table2 table .corner,
#table2 table .indexes td,
#table2 table th {
  flex: 1;
  display: flex;
  font-weight: normal;
  align-items: center;
  justify-content: center;
}

#table2 table > .header > tr > th,
#table2 table > tbody > tr > td {
  position: relative;
  min-width: 200px;
}

#table2 table > .header {
  overflow-x: hidden;
  top: 0;
  right: var(--scroll-offset);
  left: var(--index-width);
}

#table2 table > .header > tr {
  height: var(--header-height);
}

/* indexes thing */
#table2 table > .indexes {
  overflow-y: hidden;
  left: 0;
  top: var(--header-height);
  user-select: none;

  /* bottom: var(--scroll-offset); */
  max-height: calc(100% - var(--header-height) - var(--scroll-offset));
}

#table2 table > .indexes > tr {
  width: var(--index-width);
}

#table2 table tbody {
  position: absolute;
  top: var(--header-height);
  right: 0;
  left: var(--index-width);
  overflow: scroll;
  max-height: calc(100% - var(--header-height));
}

#table2 table td.active::after {
  content: " ";
  z-index: 30;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  border: solid 2px rgba(250, 0, 0, 0.2);
  pointer-events: none;
}

#table2 table:focus td.active::after {
  border: solid 2px #f00;
}

#table2 .editor {
  position: absolute;
  margin: 0;
  padding: 0;
  display: none;
  box-shadow: 0 4px 20px rgba(50, 50, 50, 0.3);
  z-index: 20;
}

#table2 .editor.editing {
  display: block;
}

/* Input thing */
#table2 .editor > .input {
  box-sizing: border-box;
  outline: none;
  background: transparent;
  resize: unset;
  color: inherit;
  font-family: inherit;
  font-size: inherit;
  border: none;
  padding: 0;
  margin: 0;
}

