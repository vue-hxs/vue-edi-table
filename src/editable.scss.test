.table-container {
    height: 20em;
}
table {
    display: flex;
    flex-flow: column;
    height: 100%;
    width: 100%;
		border-collapse: collapse;
}
table thead {
    flex: 0 0 auto;
    width: calc(100% - 0.9em);
}
table tbody {
    /* body takes all the remaining available space */
    flex: 1 1 auto;
    display: block;
    overflow-y: scroll;
		overflow-x:hidden;
}
table tbody tr {
    width: 100%;
}
table thead,
table tbody tr {
    display: table;
    table-layout: fixed;
}
table tbody tr td {
	text-align:center;
}
table tbody tr td .edit {
	width: 100%;
	height:100%;
	text-align:inherit;
}

/* decorations */
.table-container {
    border: 1px solid black;
    padding: 0.3em;
}
table {
    border: 1px solid lightgrey;
}
table td, table th {
    border: 1px solid lightgrey;
}
table th {
    border: 1px solid grey;
}
